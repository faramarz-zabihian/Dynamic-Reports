<div class="rpReport">
    <div id="controlPanel">
        <div style="float: left;">
            <img id="btnExceReport" src="~/images/cust/exec.png" title="اجرا" style="vertical-align: middle" />
            <img src="~/images/cust/help.png" title="راهنما" style="vertical-align: middle" />
        </div>
        <div style="height:37px;vertical-align: baseline">
            نام گزارش :
            <span id="spnReport" class="ui-widget" style="padding: 0;width: 100px;vertical-align: middle;">
                <select id="combobox" style="vertical-align: middle;width: 100px"></select>
            </span>
            <img onclick="saveReport()" style="vertical-align: middle;margin-right: 5px" src="~/images/cust/save.png" />
            <img onclick="dropReport()" style="vertical-align: middle;margin-right: 2px" src="~/images/cust/delete.png" />
            <input type="checkbox" id="chkPageNumber" style="vertical-align: middle;margin-right: 20px" />
            <span style="vertical-align: middle">شماره صفحه</span>
            <input type="checkbox" id="chkDate" style="vertical-align: middle; margin-right:20px;" />
            تاریخ
            <input type="checkbox" id="chkRowNumber" style="vertical-align: middle;margin-right:20px;" />
            شماره ردیف
            <input type="checkbox" id="chkUnderLine" style="vertical-align: middle; margin-right:20px" />
            خط کشی
            <span style="margin-right:20px">
                عنوان
            </span>
            <input type="text" id="txtFirstNameReport" />
            <span style="margin-right:10px">فونت</span>
            <select id="cmbFontFace">
                <option value="Tahoma" selected="selected">Tahoma</option>
            </select>
            <img class="1" id="imgResize" src="~/images/cust/fontsize.png" style="vertical-align: middle;margin-right:5px;" />
        </div>
    </div>
    <div class="divBorder" style="padding-top:10px;margin-top:10px;">
        <div class="columns" style="float:right;">
            <div class="divTitle">گزینه ها</div>
            <div class="divColRep divContent">
                <div class="searchPanel">
                    <b>جستجو</b><input type="text" id="txtSearchCol" />
                </div>
                <ul class="ulClass" id="ulSource"></ul>
            </div>
        </div>
        <div class="selColumns" style="float:right;">
            <div id="selectedColumns">
                <div id="tdMerge" style="float:left; margin-left:70px;margin-top:3px; height:22px;">
                    <img id="merge" src="~/images/cust/merge.png" title="برای ادغام بکشید" style="z-index: 999;vertical-align: middle;" />
                </div>
                <div class="divTitle">ستون</div>
                <div class="divColRep divContent">
                    <ul class="ulClass" id="ulColRep"></ul>
                </div>
            </div>
            <div style="margin-top:10px;">
                <div class="divTitle">شرط</div>
                <div class="divFilterRep divContent">
                    <ul class="ulClass" id="ulFilterRep"></ul>
                </div>
            </div>
        </div>

        <div style="float:left;" class="colOrders">
            <div>
                <div class="divTitle">ترتیب</div>
                <div class="divContent divSortRep">
                    <ul class="ulClass" id="ulSortRep"></ul>
                </div>
            </div>
            <div style="margin-top:10px;">
                <div class="divTitle">گروه بندی</div>
                <div class="divContent divGroupByRep">
                    <ul class="ulClass" id="ulGroupByRep"></ul>
                </div>
            </div>
            <div style="margin-top:10px;">
                <div class="divTitle">سرجمع</div>
                <div class="divContent divAggrigateRep">
                    <ul class="ulClass" id="ulAggrigateRep"></ul>
                </div>
            </div>
            <div style="margin-top:10px;">
                <div class="divTitle">پارامتر ها</div>
                <div class="divContent divParameterRep">
                    <ul class="ulClass" id="ulParameterRep"></ul>
                </div>
            </div>
        </div>
    </div>

    <div id="windoPopup" style="background-color: rgb(239,239,239);padding: 5px">
        <div style="border: 2px outset rgb(192,192,192);border-radius: 10px;height:35px;background-color:rgb(193,201,232);width: 99.5%;padding: 0">
            <table style="margin:0;width: 100%;height: 35px;">
                <tr>
                    <td style="width: 77%;padding-right:3%;padding-right: 43%">
                        <img id="prePage" src="~/images/cust/prev.png" title="صفحه قبل" style="vertical-align: middle">
                        <select id="dllCountRowPage" style="height: 22px;vertical-align:middle">
                            <option value="15" selected="selected">15</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="9999">همه</option>
                        </select>
                        <input type="text" id="txtPageNumber" style="width: 50px; text-align: center;font-weight: bold" />
                        <img id="btnGoToPage" src="~/images/cust/refresh.png" title="برو" style="vertical-align: middle">
                        <img id="nextPage" src="~/images/cust/next.png" title="صفحه بعد" style="vertical-align: middle">
                    </td>
                    <td style="text-align: left;width: 17%;padding-left: 3%">
                        <img id="btnGetPdf" src="~/images/cust/pdf.png" title="pdf" style="vertical-align: middle" />
                        &nbsp;
                        <img id="btnGetXlsx" src="~/images/cust/excel.png" title="خروجی اکسل" style="vertical-align: middle" />
                        &nbsp;
                        <img id="btnGetDoc" src="~/images/cust/word.png" title="word" style="vertical-align: middle" />
                        &nbsp;
                        <img id="btnClosePopup" src="~/images/cust/back.png" title="بازگشت" style="vertical-align: middle" />
                    </td>
                </tr>
            </table>
        </div>
        <div id="result" style="background-color:white;overflow:scroll;border-radius: 7px;height:630px;padding-left: 10px;padding-right: 5px;text-align: center;margin-top: 5px;border: 1px solid silver"></div>
    </div>
    <div id="messageBox" style="background-color: rgb(239,239,239);padding: 5px;width: 300px;height: 150px;text-align: center">
        <table style="width: 100%;margin-top: 0" cellspacing="0" cellpadding="0">
            <tr>
                <td style="text-align: center;margin-top: 0">
                    <div id="divMessage" style="width: 96%;border: 1px solid silver;border-radius: 5px;height:25px;font-weight:bold;margin-top: 0;text-align: right;padding-right: 10px">
                        <label id="lblHeadMessage" style="font-family: tahoma;font-size: 12px;"></label>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;height: 75px">
                    <label id="lblMessage" style="font-family: tahoma;font-size: 12px;"></label>
                </td>
            </tr>
            <tr>
                <td>
                    <input id="btnOkMessage" type="button" value="تائید" style="text-align: center;border-radius: 5px;width: 70px" />
                </td>
            </tr>
        </table>
    </div>
    <div id="winParam" style="background-color: rgb(239,239,239);padding: 5px;width: 400px;text-align: center">


        <table style="width: 100%;margin-top: 0" cellspacing="0" cellpadding="0">
            <tr>
                <td style="text-align: center;margin-top: 0">
                    <div id="divMessage" style="width: 96%;background-color:lightblue;border-radius: 5px;height:25px;font-weight:bold;margin-top: 0;text-align: right;padding-right: 10px">
                        <label id="lblHeadMessage" style="font-family: tahoma;font-size: 12px;">پارامترها</label>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;height: 75px">
                    <div id="divWinParam">
                    </div>
                </td>
            </tr>
            <tr>
                <td style="height: 60px;vertical-align: bottom">
                    <div style="display: inline-block;">
                        <input id="btnOkParameter" type="button" value="نمایش" style="text-align: center;border-radius: 5px;width: 70px" />
                        <input id="btnCancelParameter" type="button" value="انصراف" style="text-align: center;border-radius: 5px;width: 70px" />
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
